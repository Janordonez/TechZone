<?xml version = "1.0" encoding = "ISO-8859-1"?>

<!DOCTYPE controllers SYSTEM "dtds/controllers.dtd">

<!-- 
Controllers doc: 
https://www.openxava.org/OpenXavaDoc/docs/controllers_en.html

Default controllers included in OpenXava (you can extend from them):
https://github.com/openxava/openxava/blob/master/openxava/src/main/resources/xava/default-controllers.xml
 
Examples of controllers (from test application):
https://github.com/openxava/openxava/blob/master/openxavatest/src/main/resources/xava/controllers.xml
-->

<controllers>
    
    <!-- Environment variable:
    <env-var name="TechZone_DEFAULT_YEAR" value="2015"/> 
    -->
    
    <!-- Session object:
    <object name="TechZone_activeYear" class="java.lang.Integer" value="2015" 
    	    scope="global"/>    
    -->
    
    <!-- Controller:
    <controller name="Teacher">
    	<extends controller="Typical"/>
    	<action name="new" icon="plus-box-multiple" keystroke="Control N"
        	class="actions.CreateTeacher">
    	</action>
	</controller>    
    -->

    <!-- Controller:
   <controller name="MYReference">
       <extends controller="Typical"/>
       <action name="save" mode="detail"
               by-default="if-possible"
               class="org.openxava.actions.CreateNew"
   </controller>
   -->

    <controller name="MYCRUD">
        <extends controller="Typical"/>
        <action name="save" mode="detail"
                by-default="if-possible"
                class="org.example.TechZone.Actions.CustomSaveAction"
                image="save.gif"
                icon="content-save"
                keystroke="Control S"/>
    </controller>
    
    <controller name="MYReference">
        <extends controller="Reference"/>
        <action name="createNew"
                class="org.example.TechZone.Actions.NewCreateFromReference"
                icon="plus-box-multiple"
                image="create_new.gif"/>
        <action name="modify"
                class="org.example.TechZone.Actions.NewEditFromReference"
                icon="border-color"
                image="edit.gif"/>
    </controller>
</controllers>
